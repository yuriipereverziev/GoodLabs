section.protect.block
  .container
    .protect__wrapper
      h2.protect__title.title GoodLabs Immunal - природный иммуномодулятор&nbsp;
        span.text-nowrap
          | с бета-глюканом

      picture
        source(type='image/webp' srcset='img/protect-pack.webp')
        img.protect__prod(src='img/protect-pack.png' alt='product' width='608' height='377')

    ul.protect__list
      li.protect__item.protect__item--1
        //img.protect__item__img(src='img/protect__1.svg' alt='protect' width='59' height='61')
